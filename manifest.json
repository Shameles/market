{
  "name": "Steam market",
  "description": "Steam market csgo modifications",
  "version": "0.0.2",
  "manifest_version": 2,
  "homepage_url": "https://github.com/danielhusar/steam-market",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "js": ["inject.js"],
      "matches": [
        "*://*.steamcommunity.com/market/*"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "chrome://favicon/",
    "storage"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.steamcommunity.com/market/*"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [ "home.js", "market.js" ]

}
